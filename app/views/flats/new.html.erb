
<h1>New Flat</h1>
<%= link_to "Go Back", flats_path, class: "btn btn-secondary mt-3" %>

<div class="form-new-flat">
  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.submit %>
  <% end %>
</div>
