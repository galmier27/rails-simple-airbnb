<h1> Nos Locations</h1>
<p><%= @flats.count %> locations</p>

<div class="cards">
  <% @flats.each do |flat| %>
    <div class="flat-card">
      <div class="flat-img" style="background-image: url('<%=flat.image  %>')"></div>
      <div class="flat-card-info">
        <h3><%= flat.name %></h3>
        <p><%= flat.address %></p>
        <div>
          <i class="fa-solid fa-users"></i><%= flat.number_of_guests %>
          <i class="fa-solid fa-euro-sign"></i><%= flat.price_per_night %>
        </div>
      </div>
      <div class="flat-card-more-info">
        <%= link_to "More infos", flat_path(flat.id)%>
      </div>

    </div>
  <% end %>
</div>
